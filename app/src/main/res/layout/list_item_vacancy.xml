<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/vacancy_cardview"
        android:layout_marginTop="5dp"
        card_view:cardCornerRadius="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp">

            <TextView
                android:id="@+id/vacancy_cardview_primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="Primary"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="20sp"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent">

            </TextView>

            <TextView
                android:id="@+id/vacancy_cardview_secondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="Secondary"
                android:textSize="16sp"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/vacancy_cardview_primary">

            </TextView>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:orientation="horizontal"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/vacancy_cardview_secondary">

                <TextView
                    android:id="@+id/vacancy_cardview_updated_date_name_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/vacancies_updated_date_name_name"
                    android:textSize="14sp"
                    card_view:layout_constraintStart_toStartOf="parent"
                    card_view:layout_constraintTop_toTopOf="parent"
                    card_view:layout_constraintHorizontal_chainStyle="packed">

                </TextView>

                <TextView
                    android:id="@+id/vacancy_cardview_updated_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="2"
                    android:text="13.12.2019"
                    android:textSize="14sp"
                    card_view:layout_constraintTop_toTopOf="parent"
                    card_view:layout_constraintBottom_toBottomOf="parent"
                    card_view:layout_constraintStart_toEndOf="@+id/vacancy_cardview_updated_date_name_name"
                    card_view:layout_constraintHorizontal_chainStyle="packed">

                </TextView>

                <TextView
                    android:id="@+id/vacancy_cardview_updates_count_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:layout_weight="5"
                    android:text="@string/vacancies_updates_count_name"
                    android:textSize="14sp"
                    card_view:layout_constraintBottom_toBottomOf="parent"
                    card_view:layout_constraintEnd_toStartOf="@id/vacancy_cardview_updates_count"
                    card_view:layout_constraintHorizontal_chainStyle="packed"
                    card_view:layout_constraintTop_toTopOf="parent">

                </TextView>

                <TextView
                    android:id="@+id/vacancy_cardview_updates_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:text="000"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    card_view:layout_constraintBottom_toBottomOf="parent"
                    card_view:layout_constraintEnd_toEndOf="parent"
                    card_view:layout_constraintHorizontal_chainStyle="packed"
                    card_view:layout_constraintTop_toTopOf="parent">

                </TextView>

            </android.support.constraint.ConstraintLayout>

        </android.support.constraint.ConstraintLayout>



    </android.support.v7.widget.CardView>

</LinearLayout>