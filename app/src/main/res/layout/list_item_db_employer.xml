<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/dbempl_cardview"
        android:layout_marginTop="5dp"
        card_view:cardCornerRadius="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp">

        <TextView
            android:id="@+id/dbempl_cardview_empl_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Employer"

            android:textColor="@android:color/holo_blue_dark"
            android:textSize="20dp"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"></TextView>

        <TextView
            android:id="@+id/dbempl_cardview_vac_count_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:text="@string/db_empl_vac_label"
            android:textSize="16dp"
            card_view:layout_constraintTop_toBottomOf="@id/dbempl_cardview_empl_name"
            card_view:layout_constraintStart_toStartOf="parent">

            </TextView>

        <TextView
            android:id="@+id/dbempl_cardview_vac_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:text="000"
            android:textSize="16dp"
            card_view:layout_constraintTop_toBottomOf="@id/dbempl_cardview_empl_name"
            card_view:layout_constraintStart_toEndOf="@id/dbempl_cardview_vac_count_label">

        </TextView>

        <TextView
            android:id="@+id/dbempl_cardview_updated_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="100dp"
            android:text="Updated:"
            android:textSize="16dp"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toBottomOf="@id/dbempl_cardview_empl_name">

        </TextView>

        <TextView
            android:id="@+id/dbempl_cardview_updated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:text="2020-02-04"
            android:textSize="16dp"
            card_view:layout_constraintStart_toEndOf="@id/dbempl_cardview_updated_label"
            card_view:layout_constraintTop_toBottomOf="@id/dbempl_cardview_empl_name">

        </TextView>

        <TextView
            android:id="@+id/dbempl_cardview_rank_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:text="@string/db_empl_rank_label"
            android:textSize="16dp"
            card_view:layout_constraintTop_toBottomOf="@id/dbempl_cardview_vac_count_label"
            card_view:layout_constraintStart_toStartOf="parent">

        </TextView>

        <TextView
            android:id="@+id/dbempl_cardview_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:text="000"
            android:textSize="16dp"
            card_view:layout_constraintTop_toBottomOf="@id/dbempl_cardview_vac_count_label"
            card_view:layout_constraintStart_toEndOf="@id/dbempl_cardview_rank_label">

        </TextView>


    </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>